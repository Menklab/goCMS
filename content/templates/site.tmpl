<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>GoCMS</title>
</head>
<body>
<!-- loading screen -->
<style>
    body, html {
        margin: 0;
        width: 100%;
        height: 100%;
        background-color: #ffffff;
        overflow: hidden;
    }

    #loader-wrapper {
        opacity: 1;
        animation: fade 500ms ease-in;
        width: 100%;
        height: 100%;
    }

    @keyframes fade {
        0% { opacity: 0 }
        100% { opacity: 1 }
    }

    #loader-water {
        width: 100%;
        height: 30%;
        position: absolute;
        bottom: 0;
        left:0;
        z-index: 1;
        background: url('/themes/bslf/loader/images/water.svg') no-repeat;
        background-size: 120% auto;
        background-position: center top;
    }

    #loader-text {
        margin-top: 100px;
        font-family: sans-serif;
        font-size: 40px;
        text-align: center;
    }

    #loader {
        position: absolute;
        bottom: -50px;
        left: 10px;
        overflow: hidden;
        width: 70%;
        height: 70%;
    }

    @media screen and (max-width: 900px) {
        #loader-water {
            height: 15%;
        }
        #loader-text {
            font-size: 20px;
            margin-top: 200px;
        }
        #loader {
            bottom: -135px;
        }
    }

</style>
<div id="loader-wrapper" ref="loader-wrapper">
    <div id="loader-text"><h1>Loading...</h1></div>
    <div id="loader-water"></div>
    <div id="loader"></div>
</div>
<script src="/themes/bslf/loader/bodymovin.js"></script>
<script>
    var animData = {
        container: document.getElementById('loader'),
        renderer: 'svg',
        loop: true,
        autoplay: true,
        path: '/themes/bslf/loader/data.json'
    };
    var anim = bodymovin.loadAnimation(animData);
    window.onresize = anim.resize.bind(anim);
</script>
<!-- end loading screen -->

<div id="app"></div>
</body>
<link rel="stylesheet" href="../themes/bslf/app.css">
<script src="/themes/bslf/app.js"></script>
<script>require('initialize')</script>
</html>